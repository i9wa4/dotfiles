{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact|resume|clear",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_CONFIG_DIR}/scripts/sessionstart-reload.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo Current time: $(date +%Y-%m-%dT%H:%M:%S%z)"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_CONFIG_DIR}/scripts/pretooluse-bash-deny.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_CONFIG_DIR}/scripts/pretooluse-write-deny.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_CONFIG_DIR}/scripts/precompact-save.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "${CLAUDE_CONFIG_DIR}/scripts/statusline.sh",
    "padding": 0
  }
}
