{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "7 days",
  "packageRules": [
    {
      "description": "Disable mise updates (synced from nix via bin/nix-update-all.py)",
      "matchManagers": ["mise"],
      "enabled": false
    },
    {
      "description": "Disable mise regex updates (synced from nix)",
      "matchManagers": ["regex"],
      "matchFileNames": ["mise.toml"],
      "enabled": false
    }
  ]
}
