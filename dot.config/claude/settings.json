{
  "cleanupPeriodDays": 36000,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "3000000",
    "BASH_MAX_TIMEOUT_MS": "3000000",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "false",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "true",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "true",
    "DISABLE_AUTOUPDATER": "true",
    "DISABLE_BUG_COMMAND": "true",
    "DISABLE_ERROR_REPORTING": "true",
    "DISABLE_TELEMETRY": "true",
    "ENABLE_EXPERIMENTAL_MCP_CLI": "false",
    "ENABLE_LSP_TOOL": "true",
    "ENABLE_TOOL_SEARCH": "true",
    "IS_DEMO": "true"
  },
  "attribution": {},
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(git -C:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Read(**/*key*)",
      "Read(**/*token*)",
      "Read(.env.*)",
      "Read(id_ed25519)",
      "Read(id_rsa)",
      "Write(**/secrets/**)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact|resume",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_CONFIG_DIR}/restore-context.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo $(date +%Y-%m-%dT%H:%M:%S%z)"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo $(date +%Y-%m-%dT%H:%M:%S%z)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo $(date +%Y-%m-%dT%H:%M:%S%z)"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo $(date +%Y-%m-%dT%H:%M:%S%z)"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx ccusage@latest statusline"
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true,
    "context7@claude-plugins-official": true,
    "ralph-wiggum@claude-code-plugins": true
  },
  "extraKnownMarketplaces": {
    "anthropic-agent-skills": {
      "source": {
        "source": "github",
        "repo": "anthropics/skills"
      }
    },
    "claude-code-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-code"
      }
    },
    "claude-plugins-official": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-plugins-official"
      }
    }
  },
  "language": "follow CLAUDE.md's instructions",
  "alwaysThinkingEnabled": true,
  "preferredNotifChannel": "terminal_bell"
}
