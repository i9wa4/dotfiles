#!/usr/bin/env bash
# set -o verbose
# set -o xtrace
set -o errexit
set -o nounset
set -o pipefail
set -o posix

cd "$(dirname "$0")"

messages=(
  "今日は $(date +%Y年%m月%d日) です！"
  "お疲れさまです！休憩はいかがですか？"
  "それではまた明日お会いしましょう！"
)

while true; do
  for message in "${messages[@]}"; do
    clear
    cowsay "$message"
    echo
    sleep 5
  done
done
