{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "7 days",
  "packageRules": [
    {
      "matchManagers": [
        "mise",
        "regex"
      ],
      "groupName": "mise tools"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "mise\\.toml$"
      ],
      "matchStrings": [
        "\"github:(?<depName>[^\"]+)\"\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "mise\\.toml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*depName=(?<depName>\\S+)\\ngcloud\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-tags"
    }
  ]
}
